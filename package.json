{
    "name": "react-library-from-scratch",
    "description": "A template for creating a React library with Vite.",
    "version": "1.0.0-alpha.0",
    "type": "module",
    "packageManager": "yarn@4.5.3",
    "scripts": {
        "postinstall": "husky",
        "build": "vite build",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "lint-staged": {
        "*": [
            "eslint --fix",
            "prettier --ignore-unknown --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@types/node": "^22.10.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react-swc": "^3.7.2",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "pinst": "^3.0.0",
        "prettier": "^3.4.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0",
        "vite": "^6.0.2",
        "vite-plugin-dts": "^4.3.0"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    }
}
